	<div class="mix-in-sidepanel">
		<div {{action 'playBroadcast' model}}>
			{{#if view.hover}}
			<div class="play-button">
				<svg x="0px" y="0px" viewBox="0 0 20 20" enable-background="new 0 0 20 20" width="34px" style="margin-left: 25px; margin-top: 22px;vertical-align: bottom">
				<path d="M15,10.001c0,0.299-0.305,0.514-0.305,0.514l-8.561,5.303C5.51,16.227,5,15.924,5,15.149V4.852
			c0-0.777,0.51-1.078,1.135-0.67l8.561,5.305C14.695,9.487,15,9.702,15,10.001z"/>
				</svg>
			</div>
			{{/if}}
			<img src="{{unbound controller.rootpath}}{{unbound model.image}}" width="80" height="80"/>
		</div>
		<div>
			<p>{{ formatted-date model.broadcast_date 'DD-MM-YY' }}</p>
			<p>{{model.session_name}}</p>
		</div>
		{{#if view.hasTracks}}
			{{partial 'icons/minus'}}
		{{else}}
			{{#if view.hover}}
			{{partial 'icons/add'}}
			{{/if}}
		{{/if}}
	</div>

	{{#if view.hasTracks}}
		<div id="tracks-in-mix">
		{{#each mix in model.mixes}}
			<h2><b>Part {{mix.part}}</b> {{mix.name}}</h2>
			{{#each track in mix.tracks}}
		    	<p>{{two-figure-counter _view.contentIndex}} &nbsp;&nbsp; <b>{{ track.title }}</b> / {{ track.artist }} / {{ track.recordLabel }}</p>
		  	{{else}}
		    	<p>No tracklist available...</p>
		  	{{/each}}
		{{/each}}
		</div>
	{{/if}}