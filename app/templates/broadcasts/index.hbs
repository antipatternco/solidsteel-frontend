{{model}}<div id="timeline">
  <!-- 2010s -->
  <div class="decade current-decade">
    <div class="year">{{#link-to "broadcasts" (query-params year="2015") }}2015{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2014") }}14{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2013") }}13{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2012") }}12{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2011") }}11{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2010") }}<span class="showWhenBig">20</span>10{{/link-to}}</div>
  </div>

  <!-- 00s -->
  <div class="decade">
    <div class="year">{{#link-to "broadcasts" (query-params year="2009") }}<span class="hideWhenSmall">20</span>09{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2008") }}08{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2007") }}07{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2006") }}06{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2005") }}05{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2004") }}04{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2003") }}03{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2002") }}02{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2001") }}01{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="2001") }}<span class="showWhenBig">20</span>00{{/link-to}}</div>
  </div>

  <!-- 90s -->
  <div class="decade">
    <div class="year">{{#link-to "broadcasts" (query-params year="1999") }}<span class="hideWhenSmall">20</span>99{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1998") }}98{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1997") }}97{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1996") }}96{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1995") }}95{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1994") }}94{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1993") }}93{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1992") }}92{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1991") }}91{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1990") }}<span class="showWhenBig">19</span>90{{/link-to}}</div>
  </div>

  <!-- earlier/other -->
  <div class="decade">
    <div class="year">{{#link-to "broadcasts" (query-params year="1989") }}89{{/link-to}}</div>
    <div class="year">{{#link-to "broadcasts" (query-params year="1988") }}88{{/link-to}}</div>
  </div>
</div>

<div id="tracklisting" {{bind-attr class="panelOpen:panel-open:panel-closed"}}>
  {{#each broadcast in model}}
    <div>{{#link-to "broadcast" broadcast }}{{broadcast.session_name}}&nbsp;/&nbsp;{{formatted-date broadcast.broadcast_date 'MMMM Do, YYYY'}}{{/link-to}}</div>
  {{/each}}
</div>