<div id="tracklisting" {{bind-attr class="showingTracklisting:panel-open:panel-closed"}}>
	<div>
		<span {{action 'togglePanel'}}>close panel</span>
		<br />
		<p {{bind-attr class="showingTracks:current"}}{{ action 'toggleTracksSynopsis'}}><b>tracklist</b></p>
		<p {{bind-attr class="showingTracks::current"}}{{ action 'toggleTracksSynopsis'}}><b>synopsis</b></p>
	</div>
	<div {{bind-attr class="showingTracks:disabled:enabled"}}>{{model.altnotes}}</div>

	<div {{bind-attr class="showingTracks:enabled:disabled"}}>
		{{#each mix in model.mixes}}
			<h2><b>Part {{mix.part}}</b> {{mix.name}}</h2>
			{{#each track in mix.tracks}}
		    	<p>{{_view.contentIndex}} &nbsp;&nbsp; <b>{{ track.title }}</b> / {{ track.artist }} / {{ track.recordLabel }}</p>
		  	{{else}}
		    	<p>No tracks found.</p>
		  	{{/each}}
		{{else}}
			<p>No mixes found.</p>
		{{/each}}
	</div>
</div>